<?xml version="1.0" encoding="UTF-8"?>

<phpunit ListingTest="Tests/ListingTest.php" colors="true">
    <php>
        <var name="db_dsn" value="mysql:dbname=db;host=mysql"/>
        <var name="db_username" value="user"/>
        <var name="db_password" value="password"/>
    </php>

    <testsuites>
        <testsuite name="Listing test suite">
            <directory>./Tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
